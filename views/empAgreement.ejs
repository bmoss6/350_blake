		<div id="page-wrapper">

			<!-- Header -->
				<header id="header">
					<div class="logo container">
						<div>

							<p>Securing the world. One pwn at a time.</p>
						</div>
					</div>
				</header>

			<!-- Nav -->
				<nav id="nav">
					<ul>
						<li><a href="/employee/">Home</a></li>
						<li>
							<a href="#">Clients</a>
							<ul>
								<li><a href="#">Lorem ipsum dolor</a></li>
								<li><a href="#">Magna phasellus</a></li>
								<li><a href="#">Veroeros feugiat</a></li>
							</ul>
						</li>
						<li><a href="/">Logout</a></li>
					</ul>
				</nav>

				<!-- Main -->
					<div id="main-wrapper">
						<div id="main" class="container">

							<div class="row 200%">
								<div class="12u">

									<!-- Features -->
										<section class="box features">
											<h2 class="major"><span>Engagement Report</span></h2>
											<ul>
												<h2>Agreement ID: <%=agreement[0].agreement_id %></h2>
												<h2>Report Date: <%=agreement[0].effective_date %></h2>
												<h2>Signer: <%=agreement[0].signer %></h2>
												<h2>Scope: <%=agreement[0].scope %></h2>
											</ul>
												<div class="row">
													<ul>
													<% for(var i=0; i<engagementinfo.length; i++) {%>
													<div class="3u 12u(mobile)">
													</div>

													<% } %>

															</ul>
												</div>

												<table class="responstable">

													<tr>
														<th align="right"><b> <u> Vulnerability</u></b></th>

														<th align="center"><b> <u>Action</u></b></th>
														<th align="center"><b> <u>Status</u></b></th>

													</tr>
													<div class="row">

														<% for(var i=0; i<engagementinfo.length; i++) {%>
															<tr>
																<td align="center"><%=engagementinfo[i].vulnerability %></td>
																<td align="center"><%=engagementinfo[i].action %></td>

																<%if (engagementinfo[i].status=='Open') { %>
																	<td align ="center"><button class= "open"><a href ="/empupdate/<%=engagementinfo[i].vulnerability %>/<%=engagementinfo[i].agreement_id %>/Remediated"><%=engagementinfo[i].status %></a></button></td>
																		<% } %>
																		<%if (engagementinfo[i].status=='Remediated') { %>
																			<td align ="center"> <button><a href ="/empupdate/<%=engagementinfo[i].vulnerability %>/<%=engagementinfo[i].agreement_id %>/Open"><%=engagementinfo[i].status %></a></button></td>
																				<% } %>

															</tr>

														<% } %>








												</table>




                        <div align="center">

                          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#add">Add Report</button>
                        </div>

										</section>

								</div>
							</div>

						</div>

            <div class="container">

							<!-- Trigger the modal with a button -->


							<!-- Modal -->
							<div class="modal fade" id="add" role="dialog">
								<div class="modal-dialog">

									<div class="container">

							        <div class="login-wrap">
							        <div class ="login-html">
							      	<div class="login-form">
							          <h2> <u> Add Report </u></h2>

							          <form action ="/addReport/<%=agreement[0].agreement_id %>" method ="post">
                          <div class="group">
  							  					<label for="user" class="label">Engagment ID <br> <b> DO NOT CHANGE THIS FIELD</b></label>

                              <input id="user" name="engagement" type="text" class="input" value= "<%=engagementinfo[0].report_id %>" required>


  							  				</div>
                        <div class="group">
							  					<label for="user" class="label">Vulnerability</label>
							  					<input id="user" name="cve" type="text" class="input" required>
							  				</div>
												<div class="group">
												 <label for="user" class="label">Action</label>
												 <input id="user" name="action" type="text" class="input" required>
											 </div>

							          <div class="group">
							          <input type="submit" class="button" value="Add Report">
							          </div>
							        </form>
							          <div class="hr"></div>
							          <div class="foot-lnk">
							            <a href="#forgot">Forgot Password?</a><br>
							            <a href="http://codepen.io/khadkamhn/pen/ZGvPLo">Design by Mohan Khadka</a>
							          </div>
							    </div>
							  </div>

							</div>
							</div>

								</div>
							</div>

						</div>


            <div class="container">

              <!-- Trigger the modal with a button -->










					</div>

